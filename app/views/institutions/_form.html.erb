
<%= simple_form_for @institution, :html=> { class: 'form-horizontal' }  do |f| %>
<% if @institution.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@institution.errors.count, "Error") %>  Durante la Inserción de la Institución. Revisar:</h2>

      <ul>
      <% @institution.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
 <div class="form-row">
                <div class="form-input col-md-12">
                    <div class="row">
                        <div class="col-md-4">
                               <%= f.input :nombre%>
                               <br/>
                               <%= f.input :orden%>
                        </div>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn primary-bg medium">
              Guardar
            </button>
<% end %>
