<div id="page-title">
  <h3>
    Listado de Ayudas
    <small>
      disponibles en la jornada
      <b>Corazon Adentro</b>
    </small>
  </h3>
</div>
<!-- #page-title -->
<div class="form-row col-md-12">
  <div class="form-label col-md-4"></div>
  <div class="form-input">
    <div class="row">
      <div class="col-md-4">
        <%= form_tag(ayudas_path, :method => "get", id: "search-form", :html=> { class: 'form-horizontal' })do %>
        <%= text_field_tag :search, params[:search], placeholder: "Introduzca la ayuda" %>
        <%= submit_tag "Buscar" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= link_to  new_ayuda_path,:class=> "btn medium bg-blue" do %>
<span class="button-content text-transform-upr font-bold font-size-11">Nueva Ayuda</span>
<% end -%>
<div class="divider"></div>
<% if @ayudas.present? %>
<div class="example-box">
  <table class="table table-hover text-center">
    <thead>
      <tr>
        <th class="text-center">Nombre</th>
        <th class="text-center">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @ayudas.each do |ayuda| %>
      <tr>
        <td><%= ayuda.nombre.capitalize %></td>
        <td>
          <%= link_to edit_ayuda_path(ayuda) do%>
          <i class="glyph-icon icon-edit mrg5R"></i>
          Editar |
          <% end -%>
          <%= link_to  ayuda, method: :delete, data: { confirm: '¿Está seguro que desea eliminar la ayuda?' } do%>
          <i class="glyph-icon icon-remove mrg5R"></i>Borrar
          <% end -%>
        </td>
      </tr>
      <% end %>
    </tbody>

  </table>
<% else %>
  <p>
    No hay ayudas(s) con este criterio de búsqueda:
    <%= params[:search] %>.</p>
  <% end -%>
  <br>
  <%= paginate @ayudas %>
</div>
