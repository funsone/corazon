<div id="page-title">

<h3>
    Listado de Ayudas
    <small>
        Listado de ayudas disponibles en la jornada  <b>Corazon Adentro</b>
    </small>
</h3>

</div><!-- #page-title -->





<p id="notice"><%= notice %></p>
<div class="form-row">
        <div class="form-label col-md-3">
            <label for="">Agregue un criterio de busqueda
        </div>
        <div class="form-input col-md-9">
            <div class="row">
                <div class="col-md-3">
                <%= form_tag(ayudas_path, :method => "get", id: "search-form", :html=> { class: 'form-horizontal' })do %>
                    <%= text_field_tag :search, params[:search], placeholder: "Buscar Ayuda" %>
                    <%= submit_tag "Buscar" %>
                <% end %>
                </div>
            </div>
        </div>
    </div>



<%= link_to  new_ayuda_path,:class=> "btn medium bg-blue" do %>
                                      <span class="button-content text-transform-upr font-bold font-size-11">Nueva Ayuda</span>
<% end -%>

<div class="divider"></div>

<% if @ayudas.present? %>
<div class="example-box">
<table class="table table-hover">
  <thead>
    <tr>
      <th>id</th>
      <th>Nombre</th>
      <th>Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @ayudas.each do |ayuda| %>
      <tr>
	<td><%= ayuda.id %></td>
        <td><%= ayuda.nombre %></td>
	<td>
      <%= link_to  ayuda  do %>
       <i class="glyph-icon icon-download mrg5R"></i> Mostrar
      <% end -%>

       <%= link_to edit_ayuda_path(ayuda) do%>
         <i class="glyph-icon icon-edit mrg5R"></i> Editar
       <% end -%>

       <%= link_to  ayuda, method: :delete, data: { confirm: 'Are you sure?' } do%>
          <i class="glyph-icon icon-remove mrg5R"></i>Borrar
          <% end -%>
	</td>


      </tr>
    <% end %>
  </tbody>
	<tfoot>
		<tr>
			<th>ID</th>
			<th>Ayuda</th>
		  <th>Opciones</th>
		</tr>
	</tfoot>

</table>
<% else %>
  <p> no hay ayudas(s) con este criterio de busqueda: <%= params[:search] %>.</p>

<% end -%>
<br>

<%= paginate @ayudas %>


</div>
<%= link_to 'New Ayuda', new_ayuda_path %>
