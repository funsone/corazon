                <% end -%>
              </li>
              <li>
                 <%= link_to edit_ayuda_path(ayuda) do%>
                   <i class="glyph-icon icon-edit mrg5R"></i> Editar
                 <% end -%>
              </li>
              <li class="divider"></li>
              <li>
                 <%= link_to  ayuda, method: :delete, data: { confirm: 'Are you sure?' } do%>
                    <i class="glyph-icon icon-remove mrg5R"></i>Borrar
                    <% end -%>
              </li>
            </ul>
        </div>

	</td>


      </tr>
    <% end %>
  </tbody>
	<tfoot>
		<tr>
			<th>ID</th>
