 <p style='page-break-after:always;'>

 <div align="right"><em>Reporte generado por la Coord. de Informatica y Sistemas el <%=Time.now.strftime("%d/%m/%Y a las %I:%M")%></em></div>
 <hr />

 <b><%= @texto %></b><br />
<b>Institucion: <%= @institucion.last.institution %> </b><br />

<% if !@resultado.blank? %>

<table class="table-striped table-hover table-bordered table-condensed">
	<tr >
		<th>INSTITUCION</th>
		<th>AYUDAS</th>
		<th colspan="2"></th>
		<th colspan="2">SOLICITUDES</th>

		<th></th>

	</tr>
	<tr>
		<th></th>
		<th></th>
		<th colspan="2">NORMALES</th>
		<th colspan="2">URGENTES</th>
		<th colspan="0">TOTALES</th>
	</tr>

  <% for item in @resultado %>

<tr>
	<td><%= item.institucion_nombre %> </td>
	<td><%= item.nombre.upcase %></td>
	<td colspan="2" align="center">
		<% if !@normal.blank? %>
			  <% for item2 in @normal %>
			        <%= item2.cuenta if (item2.id==item.id) %>
			        	<% item2 = @normal.length+1 %>

			  <% end %>
		<% end %>


	</td>

	<td colspan="2" align="center">
			<% if !@urgente.blank? %>
			  <% for item1 in @urgente %>
			        <%= item1.cuenta if (item1.id==item.id) %>
			        	<% item1 = @urgente.length+1 %>
			  <% end %>

		<% end %>

	</td>
	<td colspan="0" align="center"><%= item.cuenta %></td>

</tr>
  <% end %>
<% else %>
  	 no hay datos en esta fecha
<% end %>

</table>

<hr />



<table class="table-striped table-hover table-bordered table-condensed">
		<tr >
		<th>#No</th>
		<th>CEDULA</th>
		<th>NOMBRE Y APELLIDOS</th>
		<th>DIRECCION</th>
		<th>TELEFONO</th>
		<th>AYUDA (ESTADO)</th>

	</tr>


	<% if !@institucion.blank?  %>
	<% @institucion.each_with_index do |item, index|%>
		    	<tr>
		    				<th><%= index+1 %></th>
  							<th><%=item.cedula %></th>
							<th><%=item.nombres.capitalize%></th>
							<th><%=item.direccion.capitalize%></th>
							<th><%=item.telefono1%></th>

							<th>
					 			<%=item.ayuditas %> (<%=item.estado%> )
							</th>


				</tr>
		  <% end %>
	<%end %>



</table>
</p>