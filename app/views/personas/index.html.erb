<div id="page-title">

<h3>
    Listado de Personas
    <small>
        Listado de personas solicitando ayudas en la jornada  <b>Corazon Adentro</b>
    </small>
</h3>

</div><!-- #page-title -->


<p id="notice"><%= notice %></p>



        <div class="form-row">
                <div class="form-label col-md-3">
                    <label for="">Agregue un criterio de busqueda
                </div>
                <div class="form-input col-md-9">
                    <div class="row">
                        <div class="col-md-3">
                        <%= form_tag(personas_path, :method => "get", id: "search-form", :html=> { class: 'form-horizontal' })do %>
                            <%= text_field_tag :search, params[:search], placeholder: "Buscar Solicitud" %>
                            <%= submit_tag "Buscar" %>
                        <% end %>
                        </div>
                    </div>
                </div>
            </div>




<%= link_to  new_persona_path,:class=> "btn medium bg-blue" do %>
                                      <span class="button-content text-transform-upr font-bold font-size-11">Nueva Persona</span>
<% end -%>

<div class="divider"></div>

<h3>

</h3>
<p class="font-gray-dark">


</p>



<script type="text/javascript">

$(document).ready(function() {

});

</script>


<% if @personas.present? %>
<div class="example-box">
<table class="table table-hover" >
<thead>
		<tr>
			<th>#</th>
			<th>Nombres y Apellidos</th>
			<th>Cedula</th>
			<th>Telefono</th>
			<th>Opciones</th>

		</tr>
	</thead>
	<tbody>
 <% @personas.each do |persona| %>
      <tr>
      	<td><%= persona.id%></td>
        <td><%= persona.nombre1.capitalize+' '+persona.nombre2.capitalize+' '+persona.apellido1.capitalize+' '+persona.apellido2.capitalize%></td>
        <td><%= persona.cedula %></td>
        <td><%= persona.telefono1 %></td>
        <td >

                <%= link_to persona do %>
                   <i class="glyph-icon icon-download mrg5R"></i> Mostrar
                <% end -%>

                 <%= link_to edit_persona_path(persona)   do%>
                   <i class="glyph-icon icon-edit mrg5R"></i> Editar
                 <% end -%>

                 <%= link_to  persona, method: :delete, data: { confirm: 'Are you sure?' } do%>
                    <i class="glyph-icon icon-remove mrg5R"></i>Borrar
                <% end -%>
       </td>


      </tr>
    <% end %>



	</tbody>
	<tfoot>
		<tr>
			<th>Id</th>
			<th>Nombres y Apellidos</th>
			<th>Cedula</th>
			<th>Telefono</th>
			<th>Opciones</th>
		</tr>
	</tfoot>
</table>
<% else %>
  <p> no hay persona(s) con este criterio de busqueda: <%= params[:search] %>.</p>

<% end -%>



<%= paginate @personas %>


</div>
